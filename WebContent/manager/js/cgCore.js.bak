function getdialogOptions(){
	// click to open dialog
	//dialog options
	var dialogOptions = {
		"title" : "dialog@" + new Date().getTime(),
		"autoOpen": false,
		"width" : 400,
		"height" : 300,
		"modal" : false,
		"resizable" : true,
		"draggable" : true,
		"close" : function(){
			$(this).dialog("close");
		}
	};
	return dialogOptions;
}
